public class Book
{
    private int currentPage;
    private int numPages;
    
    public Book (int pages) {
        currentPage = 1;
        numPages = pages;
    }
    
    public void nextPage() 
    {
        if (currentPage < numPages) 
        {
            currentPage ++;
        }
    }
}
