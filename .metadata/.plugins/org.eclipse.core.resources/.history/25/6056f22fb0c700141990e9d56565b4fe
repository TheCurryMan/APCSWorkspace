public class Heapsort
{
    // Sorts a[0], ..., a[size-1] in ascending order
    //   using the Mergesort algorithm
    public static void sort(double[] a)
    {
        int n = a.length;
        for ( int i = n / 2; i >= 1; i-- )
            reheapDown( a, i, n );
        while ( n > 1 )
        {
            // swap a[0] with a[n-1]:
            double temp = a[0];
            a[0] = a[n - 1];
            a[n - 1] = temp;
            n--;
            reheapDown( a, 1, n );
        }
    }

    // Should be private - made public for testing
    public static void reheapDown(double[] a, int i, int n)
    {
        int c = i;
        while ( 2 * c < n )
        {
            if ( 2 * c + 1 == n )
                //TODO:
                if ( a[c -1] > a[2 * c] )
                    return;
                else
                {
                    double t = a[c-1];
                    a[c-1] = a[2 * c + 1];
                    a[2 * c + 1] = t;
                    return;
                }
            if ( a[c-1] >= a[2 * c] && a[c] >= a[2 * c + 1] )
                return;
            if ( a[2 * c] > a[2 * c + 1] )
            {
                double t = a[c-1];
                a[c-1] = a[2 * c];
                a[2 * c] = t;
                c = 2 * c;
            }
            else
            {
                double t = a[c-1];
                a[c-1] = a[2 * c + 1];
                a[2 * c + 1] = t;
                c = 2 * c + 1;
            }
        }
    }
}
